{
  "manifest_version": 3,
  "name": "AI Onboarding Coach",
  "version": "1.0.0",
  "description": "AI-powered onboarding coach for GCP Cloud Storage",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://console.cloud.google.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://console.cloud.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Onboarding Coach"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
